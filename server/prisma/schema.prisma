// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id          String      @id @default(uuid())
    displayName String
    familyName  String
    givenName   String
    email       String      @unique
    photo       String
    workspace   Workspace[] @relation("Workspaces")
}

model Workspace {
    id      String @id @default(uuid())
    logo    String
    user    User   @relation("Workspaces", fields: [adminId], references: [id])
    adminId String
}
